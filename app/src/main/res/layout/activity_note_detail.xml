<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme"
        android:background="@color/yaleBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_food_info"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:text="@string/food_name"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
         />

    <AutoCompleteTextView
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:hint="@string/enter_your_food"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:textColor="@color/darkGray"
        android:textSize="25sp"
        tools:ignore="RtlHardcoded" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:text="@string/add_purchase_date"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/addDate"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="left"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="@color/white"
        android:text="@string/add_sign"
        android:textColor="@color/yaleBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/descriptionEditText"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="left"
        android:hint="@string/purchase_date"
        android:minLines="3"
        android:layout_marginLeft="12dp"
        android:textAllCaps="false"
        android:textColor="@color/darkGray"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:text="@string/add_expiration_date"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/addEx"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="left"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="@color/white"
        android:text="@string/add_sign"
        android:textAllCaps="false"
        android:textColor="@color/yaleBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/exEditText"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="left"
        android:hint="@string/expiration_date"
        android:minLines="3"
        android:layout_marginLeft="12dp"
        android:textAllCaps="false"
        android:textColor="@color/darkGray"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_entry"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:backgroundTint="@color/oceanGreen"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:onClick="saveNote"/>


    <Button
        android:id="@+id/deleteNoteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/red"
        android:onClick="deleteNote"
        android:text="@string/delete_entry"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


</LinearLayout>